<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.semih.schach.Main.MenuScreen"
    android:background="#B56249">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/splashHeading"
        android:id="@+id/textView"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/neuesSpielButton"
        android:id="@+id/idNeuesSpielButton"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="onClickNeuesSpiel" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/einstellungenButton"
        android:id="@+id/idEinstellungenButton"
        android:layout_below="@+id/idNeuesSpielButton"
        android:layout_centerHorizontal="true"
        android:onClick="onClickEinstellungen" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/beendenButton"
        android:id="@+id/idBeendenButton"
        android:layout_below="@+id/idEinstellungenButton"
        android:layout_centerHorizontal="true"
        android:onClick="onClickBeenden"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>
