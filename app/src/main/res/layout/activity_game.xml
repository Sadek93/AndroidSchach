<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.semih.schach.Main.Game"
    android:background="#B56249"
    android:id="@+id/idRelativeLayout">

    <com.example.semih.schach.Main.DrawView
        android:layout_width="384dp"
        android:layout_height="384dp"
        android:id="@+id/idSchachbrett"
        />

    <RelativeLayout
        android:layout_width="235dp"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuButton"
            android:id="@+id/button"
            android:onClick="onClickMenu"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="17dp" />


        <fragment
            android:id="@+id/consoleFragment"
            android:name="com.example.semih.schach.Util.consoleFragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_console" />


    </RelativeLayout>

</RelativeLayout>
